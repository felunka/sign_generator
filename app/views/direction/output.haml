!!! 5
%html
  %head
    %title= yield(:title)
    = csrf_meta_tags
    = csp_meta_tag

    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'

    :css
      @page {
        size: landscape;
      }
  %body
    - @data.each do |page|
      .a4-h.direction-page
        .top-decal
          = image_tag 'decal.png'
        .bottom-decal
          = image_tag 'decal3.png'
        .logo
          = image_tag 'polylan_logo.png'
        .container.h-100
          .row.h-100.justify-content-center.align-items-center
            .col
              .container
                - page['elements'].each do |element|
                  .row.mb-3
                    .col-7.h1.text-right
                      = element['text']
                    .col-2
                    .col-1.direction-icon
                      = image_tag "#{element['icon']}.png"


:javascript
  window.print();
